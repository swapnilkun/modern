@using PagedList
@using PagedList.Mvc
@model IPagedList<ModernMarketResearch.Areas.Admin.Models.ViewModel.ReportVM>
@{
    ViewBag.Title = "PublisherRelatedReports";
}
<style>
    .read-more-state {
        display: none;
    }

    .read-more-target {
        opacity: 0;
        height: 0;
        font-size: 0;
        transition: .25s ease;
    }

        .read-more-target p {
            display: none;
        }

    .read-more-wrap {
        text-align: justify;
    }

    .read-more-state:checked ~ .read-more-wrap .read-more-target {
        opacity: 1;
        font-size: inherit;
        max-height: 999em;
    }

        .read-more-state:checked ~ .read-more-wrap .read-more-target p {
            display: block;
        }

    .read-more-state ~ .read-more-trigger:before {
        content: 'Read more ...';
    }

    .read-more-state:checked ~ .read-more-trigger:before {
        content: 'Read less ...';
    }

    .read-more-trigger {
        cursor: pointer;
        display: inline-block;
        padding: 0 .5em;
        color: #666;
        font-size: .9em;
        line-height: 2;
        border: 1px solid #ddd;
        border-radius: .25em;
        margin-bottom: 30px;
    }
</style>
<div class="wrapper">
    <div class="row">
        <div class="col-md-8">

            <h1 class="title">@Model.First().PublisherName Reports</h1>


            <input type="checkbox" class="read-more-state" id="post-1">
            <div class="read-more-wrap">
                <div id=" ">
                    <p>@ViewBag.ShortPubDesc</p>
                </div>
                <span class="read-more-target">
                    <p>@ViewBag.LongPubDesc</p>
                </span>
            </div>
            <label for="post-1" class="read-more-trigger"></label>

            <div>
                <table cellspacing="0" border="0" id="ctl00_ContentPlaceHolder1_grdReports" style="width: 100%; border-collapse: collapse;">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <a href="@Url.Action("ReportDetail", "Report", new {@reporturl=item.ReportUrl })">
                                                <h3 class="panel-title">@item.ReportTitle</h3>
                                            </a>
                                        </div>
                                        <div class="panel-body category-short-note">
                                            <p class="date-info"><i class="fa fa-calendar"></i> @item.PublishingDate.ToString("MMM-yy") | @item.PublisherName | <a href="@Url.Action("CategoryRelatedReports", "Report", new { @caturl = item.CategoryUrl })">@item.CategoryName</a></p>

                                            @Html.Raw(item.FullDescription)

                                            <br>
                                            <a rel="nofollow" href="@Url.Action("ReportDetail", "Report", new { @ReportUrl = item.ReportUrl })">View More <i class="fa fa-arrow-circle-right"></i></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <ul class="pagination">

                    @Html.PagedListPager(Model, pageno => Url.Action("PublisherRelatedReports", new
                              {
                                  pageno,
                              }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true })
            </ul>
        </div>

        <div class="col-md-4">

          @{Html.RenderAction("LatestReport", "Report");}

           @*@{Html.RenderAction("LatestNews", "News");}*@

        </div>
    </div>
</div>

