<script type="text/javascript">
    function ValidCaptcha(formType) {
        debugger;
        var obj = {};
        var v = $("#txtInput_" + formType).val();
        var w = $("#txtCaptcha_" + formType).val();
        var res = false;

        obj.inputcapcha = v;
        obj.RealCaptcha = w;

        $.ajax({
            type: "post",
            url: '@Url.Action("CaptchaValidation", "InquiryForm")',
            data: JSON.stringify(obj),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            async: false,
            success: function (data) {
                res = data;
            },
            error: function (res) {
                alert("Error..." + res.responseText);
            }
        });
        return res;
    }
    function ValidateForm(e, formType) {
        debugger;
        if ($("#Enquiryform_" + formType).valid()) {
            if (ValidCaptcha(formType)) {
                $("#Enquiryform_" + formType).submit();
            } else {
                e.preventDefault();
                $("#captchaError_" + formType).html("Not Valid Captcha !..");
            }
        }
    }
</script>
