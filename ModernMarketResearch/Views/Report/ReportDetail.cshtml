        }
        $.ajax({
            type: "post",
            url: '@Url.Action("CaptchaValidation", "InquiryForm")',
            data: JSON.stringify(obj),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            async: false,
            success: function (data) {
                res = data;
            },
